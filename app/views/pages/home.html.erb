<div class= "text-white container col-12">
  <div class= "center">
    <div class= "justify-content-center">
      <%= image_tag 'fs.png', class: "logoclass" %>
    </div>
    <div class="d-flex justify-content-center mt-1">
      <p class="pfind"><strong>Find your next workout!</strong></p>
    </div>
    <div class="d-contents justify-content-center mt-3">
        <% if user_signed_in? %>
          <div class="justify-content-center">
          <div class="d-flex justify-content-center"> Welcome back, <%= current_user.first_name %>! </div>
          <div div class="d-flex justify-content-center mt-3"><a href="<%= workouts_path %>" class="btn btn-green form-control"><strong>Get started!</a></strong></div>
          <div class= "mt-3" ><%= button_to "Sign out", destroy_user_session_path, method: :delete, class:"btn btn-green form-control" %></div>
          </div>
          <%else%>
            <a href="<%= user_session_path %>" class="btn btn-green form-control"><strong>Get started!</a></strong>
      <% end %>
    </div>
  </div>
</div>
