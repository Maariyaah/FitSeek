<div class= "text-white container col-12">
  <div class= "center">
    <div class= "d-flex justify-content-center mt-5">
      <%= image_tag 'fs.png', class: "logoclass" %>
    </div>

    <div class="d-flex justify-content-center mt-1">
      <p class="pfind"><strong>Find your next workout!</strong></p>

    </div>
    <div class="d-flex justify-content-center mt-3">
        <% if user_signed_in? %>
          <div class="d-flex justify-content-center mt-3">
          <div> Welcome back, <%= current_user.first_name %>! </div>
          <a href="<%= workouts_path %>" class="btn btn-green form-control"><strong>Get started!</a></strong>
          <%= button_to "Sign out", destroy_user_session_path, method: :delete, class:"loginbutton2" %>
          </div>
          <%else%>
            <a href="<%= user_session_path %>" class="btn btn-green form-control"><strong>Get started!</a></strong>
      <% end %>
    </div>
  </div>
</div>
