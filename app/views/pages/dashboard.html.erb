<%= render "shared/cardsdashboard", user: @user %>
<%= render "shared/navbar" %>


<div class="container">
   <div class="div1", data-controller="toggle">
      <h3 data-action="click->toggle#functiontoggle"> Upcoming classes</h3>
     <div data-toggle-target="div1">
       <p>UPCOMNING CLASSES.......</p>
     </div>
  </div>
     <div class="div2">
       <h3 data-action="click->toggle#functiontoggle2"> Past classes</h3>
       <div class="d-none", data-toggle-target="div2">
         <p>PAST CLASSES..........</p>
      </div>
    </div>
</div>



<div class="container p-4" mb-4  style= "width:50%; height:100vh";>
  <% @bookings.each do |booking| %>
<div style="background-color: #2A2A2A;">
  <div class="notification container m-2 border-0 rounded " style="max-width: 100vw;">
    <div class="notification-content m-2">
    <div class="m-2">
      <h4 class= "text-white mt-1"> <%= booking.workout.name %></h4>
      <p><%= booking.workout.category %></p>
      <p><%= booking.date %></p>
      <p><%= booking.workout.address %></p>
    </div>
  <%= link_to 'Cancel class', booking_path(booking), data: { "turbo-method": :delete } %>
    </div>
  </div>
</div>
<% end %>
</div>
