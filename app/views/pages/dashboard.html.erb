<%= render "shared/navbar2" %>
<% if user_signed_in?%>
<%= @user.first_name %><%= @user.last_name %>
<%= render "shared/cardsdashboard", user: @user %>
<% end %>



<div class="container d-flex yello mt-3", data-controller="toggle">
  <div>
    <h4 data-action="click->toggle#functiontoggle" class="paragrafo">Upcoming classes</h4>
      <div data-toggle-target="div1">
        <div class="container">
          <% @bookings.each do |booking| %>
        <div style="background-color: #2A2A2A;">
            <div class="notification-content m-2">
            <div class="m-2">
              <h4 class= "text-white mt-1"> <%= booking.workout.name %></h4>
              <p><%= booking.workout.category %></p>
              <p><%= booking.date %></p>
              <p><%= booking.workout.address %></p>
              <%= @user.fsdollars %>
              <%= link_to 'Cancel class', booking_path(booking), data: { "turbo-method": :delete } %>

              </div>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>
<div>
      <div>
       <h4 data-action="click->toggle#functiontoggle2" class="paragrafo"> Past classes</h4>
        <div data-toggle-target="div2">
