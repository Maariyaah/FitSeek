<% if notice %>
  <div class="alert alert-info alert-dismissible fade show m-1 text-white", style="border-radius:20px;background: black;border-color: #4CAF50;border-width:4px;text-align: center;", role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible fade show m-1 text-white",  style="border-radius:20px;background: black;border-color: #4CAF50;border-width:4px;text-align: center;", role="alert">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
